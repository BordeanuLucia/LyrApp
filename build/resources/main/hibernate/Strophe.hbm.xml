<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.Strophe" table="Strophes" lazy="false">
        <id name="id" type="java.lang.Long" column="sid">
            <generator class="increment"/>
        </id>
        <property name="position" type="java.lang.Long" column="position"/>
        <property name="text" type="java.lang.String" column="text"/>
        <many-to-one name="song" not-null="false" class="model.Song" column="songId" lazy="false"/>
    </class>
</hibernate-mapping>